---
const { t } = Astro.locals;
---

<div class="py-24 pb-35 md:py-38 max-md:px-4">
  <div class="flex flex-col items-center mx-auto max-w-7xl gap-y-12 md:gap-y-30">
    <div class="flex flex-col gap-y-8 md:gap-y-12 items-center mx-auto max-w-145">
      <h2 class="text-[38px] md:text-5xl font-bold text-center leading-[normal] max-md:max-w-100">
        <span class="inline px-4 leading-[normal] text-white bg-dark line-box">
          {t("levels.heading")}
        </span>
      </h2>

      <p class="text-2xl font-bold text-center">
        {t("levels.subtitle")}
      </p>
    </div>

    <div class="flex flex-col gap-y-8 md:gap-y-12 items-center w-full">
      <p class="font-serif text-xl font-bold">{t("levels.seniority")}</p>

      <div class="w-full grid grid-cols-2 md:flex md:flex-wrap gap-x-2 gap-y-8 md:gap-12 justify-items-center md:justify-center">
        <div class="flex justify-center items-center h-10 font-serif font-bold w-full max-w-[200px] md:w-50 border-3 border-blue">
          {t("levels.junior")}
        </div>
        <div class="flex justify-center items-center h-10 font-serif font-bold w-full max-w-[200px] md:w-50 border-3 border-green">
          {t("levels.mid")}
        </div>
        <div class="flex justify-center items-center h-10 font-serif font-bold w-full max-w-[200px] col-span-2 md:col-span-1 md:w-50 border-3 border-red">
          {t("levels.expert")}
        </div>
      </div>
    </div>

    <div class="flex flex-col gap-y-8 md:gap-12 items-center w-full">
      <p class="font-serif text-xl font-bold">{t("levels.roles")}</p>

      <div class="w-full grid grid-cols-2 md:flex md:flex-wrap gap-x-2 gap-y-8 md:gap-12 justify-items-center md:justify-center max-w-3xl">
        <div class="flex justify-center items-center h-10 font-serif font-bold w-full max-w-[200px] md:w-50 border-3 border-yellow">
          {t("levels.frontend")}
        </div>

        <div class="flex justify-center items-center h-10 font-serif font-bold w-full max-w-[200px] md:w-50 border-3 border-yellow">
          {t("levels.backend")}
        </div>

        <div class="flex justify-center items-center h-10 font-serif font-bold w-full max-w-[200px] md:w-50 border-3 border-yellow">
          {t("levels.fullstack")}
        </div>

        <div class="flex justify-center items-center h-10 font-serif font-bold w-full max-w-[200px] md:w-50 border-3 border-yellow">
          {t("levels.qa")}
        </div>
        
        <div class="flex justify-center items-center h-10 font-serif font-bold w-full max-w-[200px] md:w-50 border-3 border-yellow">
          {t("levels.devops")}
        </div>

        <div class="flex justify-center items-center h-10 font-serif font-bold w-full max-w-[200px] md:w-50 border-3 border-yellow">
          {t("levels.cloud")}
        </div>

        <div class="flex justify-center items-center h-10 font-serif font-bold w-full max-w-[200px] md:w-50 border-3 border-yellow">
          {t("levels.support")}
        </div>

        <div class="flex justify-center items-center h-10 font-serif font-bold w-full max-w-[200px] md:w-50 border-3 border-yellow">
          {t("levels.sysadmin")}
        </div>
      </div>
    </div>

    <p class="font-serif text-2xl italic font-normal text-center">{t("levels.ready")}</p>
  </div>
</div>
