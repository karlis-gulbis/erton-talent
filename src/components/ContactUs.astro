---
import Email from "../assets/svgs/email.svg";
import Phone from "../assets/svgs/phone.svg";
import FormContactUs from "./FormContactUs.vue";
const { t } = Astro.locals;
---

<div class="py-28 md:py-38 bg-white max-md:px-4">
  <div class="flex flex-col items-center mx-auto max-w-7xl gap-y-20 md:gap-y-25">
    <div class="flex flex-col gap-12 items-center mx-auto max-w-145">
      <h2 class="text-[38px] md:text-5xl font-bold text-center leading-[normal] max-md:max-w-100">
        <span class="inline px-4 text-white bg-dark line-box">
          {t("contact.heading")}
        </span>
      </h2>
    </div>

    <FormContactUs
      id="contact-us"
      client:visible
      name-placeholder={t("form.namePlaceholder")}
      last-name-placeholder={t("form.lastNamePlaceholder")}
      email-placeholder={t("form.emailPlaceholder")}
      message-placeholder={t("form.messagePlaceholder")}
      send-label={t("form.send")}
      sending-label={t("form.sending")}
      success-text={t("form.success")}
      error-text={t("form.error")}
    />

    <div class="flex max-md:flex-col max-md:items-center max-md:gap-8 md:gap-6 w-full max-w-175">
      <div class="flex flex-1 gap-5 items-center p-5 border-3 border-blue h-25 max-md:max-w-82 max-md:w-full">
        <Phone class="size-15 aspect-square" />

        <div class="space-y-1">
          <p class="font-bold">{t("contact.phoneLabel")}</p>
          <a href="tel:+46858099625">+46 858 099 625</a>
        </div>
      </div>

      <div class="flex flex-1 gap-5 items-center p-5 border-3 border-green h-25 max-md:max-w-82 max-md:w-full">
        <Email class="size-15 aspect-square" />

        <div class="space-y-1">
          <p class="font-bold">{t("contact.emailLabel")}</p>
          <a href="mailto:sales@erton.se">sales@erton.se</a>
        </div>
      </div>
    </div>
  </div>
</div>
