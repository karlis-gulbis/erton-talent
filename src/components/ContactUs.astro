---
import Email from "../assets/svgs/email.svg";
import Phone from "../assets/svgs/phone.svg";
import FormContactUs from "./FormContactUs.vue";
const { t } = Astro.locals;
---

<div class="py-38 bg-gray">
  <div class="flex flex-col items-center mx-auto max-w-7xl gap-y-25">
    <div class="flex flex-col gap-12 items-center mx-auto max-w-145">
      <h2 class="text-5xl font-bold text-center">
        <span class="inline px-4 leading-[normal] text-white bg-dark line-box">
          {t("contact.heading")}
        </span>
      </h2>
    </div>

    <FormContactUs
      id="contact-us"
      client:visible
      name-placeholder={t("form.namePlaceholder")}
      last-name-placeholder={t("form.lastNamePlaceholder")}
      email-placeholder={t("form.emailPlaceholder")}
      message-placeholder={t("form.messagePlaceholder")}
      send-label={t("form.send")}
      sending-label={t("form.sending")}
      success-text={t("form.success")}
      error-text={t("form.error")}
    />

    <div class="flex gap-6 w-full max-w-175">
      <div
        class="flex flex-1 gap-5 items-center p-5 lex border-3 border-green h-25"
      >
        <Phone class="size-15 aspect-square" />

        <div class="space-y-1">
          <p class="font-bold">{t("contact.phoneLabel")}</p>
          <a href="tel:+37122222222">+371 22222222</a>
        </div>
      </div>

      <div class="flex flex-1 gap-5 items-center p-5 border-3 border-blue h-25">
        <Email class="size-15 aspect-square" />

        <div class="space-y-1">
          <p class="font-bold">{t("contact.emailLabel")}</p>
          <a href="mailto:erton@erton.se">erton@erton.se</a>
        </div>
      </div>
    </div>
  </div>
</div>
