---
const { t } = Astro.locals;
---

<div class="flex flex-col gap-y-12 items-center px-4 py-38">
  <div class="flex flex-col gap-y-8 items-center max-w-7xl">
    <h1 class="text-5xl font-bold text-center max-w-105">
      <span class="inline px-4 leading-[normal] text-white bg-dark line-box">{t("hero.title")}</span>
    </h1>

    <p class="text-2xl font-bold text-center max-w-150">
      {t("hero.subtitle")}
    </p>

    <p class="font-serif text-center max-w-150">
      {t("hero.description")}
    </p>
  </div>

  <a class="px-6 py-2 mx-auto font-bold uppercase rounded-sm bg-yellow" href="#contact-us">{t("hero.cta")}</a>
</div>
