---
const { t } = Astro.locals;
---

<div class="bg-gray py-29 md:py-38">
  <div class="flex flex-col mx-auto max-w-7xl gap-18">
    <div class="flex items-center flex-col gap-y-9">
      <h2 class="text-[38px] md:text-5xl font-bold leading-[normal] max-md:text-center">
        <span class="inline px-4 text-white bg-dark line-box">
          {t("from.heading")}
        </span>
      </h2>

      <p class="text-2xl font-bold text-center">{t("from.subtitle")}</p>
    </div>

    <div class="flex justify-between max-lg:flex-col max-lg:gap-12 lg:gap-x-8 px-4 max-lg:items-center">
      <div class="flex flex-1 gap-5 max-w-90">
        <div class="triangle !border-b-blue"></div>

        <p class="font-serif">{t("from.p1")}</p>
      </div>

      <div class="flex flex-1 gap-4 max-w-90">
        <div class="triangle !border-b-yellow"></div>

        <p class="font-serif">{t("from.p2")}</p>
      </div>

      <div class="flex flex-1 gap-5 max-w-90">
        <div class="triangle !border-b-green"></div>

        <p class="font-serif">{t("from.p3")}</p>
      </div>
    </div>
  </div>
</div>

<style>
  .triangle {
    width: 0;
    height: 0;
    border-left: 48px solid transparent;
    border-bottom: 48px solid;
  }
</style>
