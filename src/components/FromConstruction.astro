---
const { t } = Astro.locals;
---

<div class="bg-gray py-38">
  <div class="flex flex-col mx-auto max-w-7xl gap-18">
    <div class="flex flex-wrap items-center gap-x-15">
      <h2 class="text-5xl font-bold">
        <span class="inline px-4 leading-[normal] text-white bg-dark line-box">
          {t("from.heading")}
        </span>
      </h2>

      <p class="text-2xl font-bold">{t("from.subtitle")}</p>
    </div>

    <div class="flex justify-between">
      <div class="flex flex-1 gap-5 max-w-90">
        <div class="triangle !border-b-blue" />

        <p class="font-serif">{t("from.p1")}</p>
      </div>

      <div class="flex flex-1 gap-5 max-w-90">
        <div class="triangle !border-b-yellow" />

        <p class="font-serif">{t("from.p2")}</p>
      </div>

      <div class="flex flex-1 gap-5 max-w-90">
        <div class="triangle !border-b-green" />

        <p class="font-serif">{t("from.p3")}</p>
      </div>
    </div>
  </div>
</div>

<style>
  .triangle {
    width: 0;
    height: 0;
    border-left: 48px solid transparent;
    border-bottom: 48px solid;
  }
</style>
