---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { Font } from "astro:assets";
import { SEO } from "astro-seo";
const { locale, t } = Astro.locals;
const siteUrl = "https://erton.it";
const pageTitle = t("site.title");
const pageDescription = t("site.description");
const canonical = `${siteUrl}${Astro.url.pathname}`;
const ogImage = `${siteUrl}/og/${locale}.png`;
---

<html lang={locale} class="antialiased">
  <head>
    <Font cssVariable="--font-heebo" preload />
    <Font cssVariable="--font-arimo" preload />

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={pageTitle}
      description={pageDescription}
      canonical={canonical}
      openGraph={{
        basic: { title: pageTitle, type: "website", image: ogImage },
        optional: { siteName: "Erton Talent", locale }
      }}
      twitter={{ card: "summary_large_image" }}
    />
  </head>

  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
